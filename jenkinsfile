pipeline {
    agent any

    environment {
        TF_VERSION = '1.9.5'
        ANSIBLE_VERSION = '2.16.11' 
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/melda-20/Automation.git'
            }
        }

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
